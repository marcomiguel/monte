<article class=" hnews hentry group">
    <figure class="hmedia">
        <a href="{{nUrl(nid)}}{{TrackUrl(position)}}">
           <span class="icon icon-4"></span>
            <img class="photo" src="{{ cdn_image(getNode(nid).imagen_portada['hash'],size) }}" alt="{{getNode(nid).imagen_portada['alt']}}">
        </a>
        <figcaption class="fn hide">{{getNode(nid).titulo_corto}}</figcaption>
    </figure>

    <div class="entry-cont ">
        <p class="cat">
            <a href="{{nUrl(nid)}}{{TrackUrl(position)}}">{{getNode(nid).categoria['nombre']}}</a>
            <time class="pubdate" datetime="{{date('Y-m-d H:i',getNode(nid).fecha_publicacion)}}">{{date('d/m/y',getNode(nid).fecha_publicacion)}}</time>
        </p>
        <h2 class="entry-title"><a class="url" href="{{nUrl(nid)}}{{TrackUrl(position)}}" rel="bookmark">{{getNode(nid).titulo_corto}}</a></h2>
        <p>{{getNode(nid).bajada}}</p>


        <footer>
            <div class="entry-actions group">

                <a class="entry-comments" href="#">
                    <span class="icon-7"></span>
                    300 comentarios
                </a>

                <ul class="social-icons">
                    <li class="fb"><a href="#"><i class="icon-1"></i><span>Facebook</span></a></li>
                    <li class="tw"><a href="#"><i class="icon-5"></i><span>Twitter</span></a></li>
                    <li class="wa"><a href="#"><i class="icon-18"></i><span>Whatsapp</span></a></li>
                </ul>
            </div>
            <p class="hide source-org vcard"><a class="fn url org" href="http://www.rpp.com.pe">RPP
                    Noticias</a></p>
        </footer>

    </div>
    <!-- .entry-cont -->


</article>