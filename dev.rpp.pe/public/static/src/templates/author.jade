extends layouts/article

block variables
  - var pageType = "author-section"
  - var pageTitle = "Autor"
  - var x = "lazy, columns-fit, column-fix"

block container
  .story
    .col-primary
      .box-mod.flow

        .box-header
          h3.title Pirámide Invertida
          .pull-right.cat
            | BLOG

        .author-description(itemprop="author", itemscope itemtype="https://schema.org/Person")
          figure.author-img
            img(itemprop="image", src="http://p-gruporpp-media-v.s3.amazonaws.com/assets/avatar/blog_110/yrojas.jpg", alt="X-DEMO-CONTENT")
          .author-bio
            .top-bio
              .tit Autor
              span(itemprop="name") Yazmin Rojas

            p(itemprop="description").
              Soy periodista. Becada por la Organización de Estados Americanos (OEA) para la especialización de periodismo científico. Este espacio servirá para difundir las innovaciones tecnológicas y proyectos científicos que se realizan en el Perú y el mundo.
            ul.author-social
              li
                a(href= linkFacebook, onclick='fn(this, event, {"method":"wopen"})')
                  .icon-facebook
              li
                a(href= linkTwitter, onclick='fn(this, event, {"method":"wopen"})')
                  .icon-twitter
              li
                a(href="#link")
                  .icon-rss


        .flow
          .row.x-columns-fit(data-x={"breakpoints":"480x1x10,768x2x10"})
